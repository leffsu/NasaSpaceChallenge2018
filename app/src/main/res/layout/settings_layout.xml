<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/swSound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/without_sound"
        android:padding="16dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cecece"
        app:layout_constraintTop_toBottomOf="@id/swSound"/>
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/swSaved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/without_save"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/swSound"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cecece"
        app:layout_constraintTop_toBottomOf="@id/swSaved"/>

    <TextView
        android:id="@+id/txvShowGuide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textColor="#000"
        android:text="@string/guide"
        app:layout_constraintTop_toBottomOf="@id/swSaved"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cecece"
        app:layout_constraintTop_toBottomOf="@id/txvShowGuide"/>
</android.support.constraint.ConstraintLayout>